
<div class="about">
    <div class="about__container">
        <div class="about__image-content">
            <picture class="about__image">
                <source media="(min-width: 992px)" srcset="{{ section.settings.image | img_url: 'master' }}">
                <source media="(min-width: 768px)" srcset="{{ section.settings.image_2 | img_url: 'master' }}">
                <source media="(max-width: 767.87px)" srcset="{{ section.settings.image_3 | img_url: 'master' }}">
                <img class="about__image-img" src="{{ section.settings.image_3 | img_url: 'master' }}" alt="{{section.settings.image.alt | escape}}">
            </picture>
        </div>
        <div class="about__text-content">
            <h3 class="about__heading">{{ section.settings.heading }}</h3>
            <div class="about__bodytext">{{ section.settings.bodytext }}</div>
        </div>
    </div>
</div>

<style>
    .about__heading {
        font-size: {{ section.settings.heading_size}}rem;
        color: {{ section.settings.heading_color }};
    }
    @media only screen and (max-width: 767px) {
        .about__heading {
            font-size: 3rem;
        }
    }
    .about__bodytext {
        color: {{ section.settings.bodytext_color }};
    }
    {% if section.settings.left_right == 'left' %}
        .about__text-content {
            grid-column-start: 1;
            grid-row-start: 1;
        }
    {% endif %}
    {% if section.settings.uppercase == true %}
        .about__heading {
            text-transform: uppercase;
        }
    {% endif %}
    .about__text-content {
        text-align: {{section.settings.text_align}};
    }
    @media only screen and (max-width: 991px) {
        .about__text-content {
            text-align: {{section.settings.text_align--mobile}};
        }
    }

    .highlight {
        color: {{section.settings.highlight_color}};
    }
</style>


<script>
    function highlightWord() {
        let heading = document.getElementsByClassName('about__heading')[0];
        let word = '{{section.settings.highlight_text}}';
        let split = heading.innerHTML.split(word);
        let newText = split[0] + '<span class="highlight">' + word + '</span>' + split[1];
        heading.innerHTML = newText;
    }

    {% if section.settings.highlight_text != blank %}
        highlightWord();
    {% endif %}
</script>


{% schema %}
{
    "name": "About Section",
    "tag": "section",
    "class": "about-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image (for Desktops)"
        },
        {
            "type": "image_picker",
            "id": "image_2",
            "label": "Image (for Tablets)"
        },
        {
            "type": "image_picker",
            "id": "image_3",
            "label": "Image (for Mobile)"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading or Tagline"
        },
        {
            "type": "number",
            "id": "heading_size",
            "label": "Heading Font Size (rem)",
            "default": 5
        },
        {
            "type": "checkbox",
            "id": "uppercase",
            "label": "Uppercase",
            "default": true
        },
        {
            "type": "text",
            "id": "highlight_text",
            "label": "Highlight a word"
        },
        {
            "type": "color",
            "id": "highlight_color",
            "label": "Highlighted Text Color",
            "default": "#CCCCCC"
        },
        {
            "type": "textarea",
            "id": "bodytext",
            "label": "Body Text"
        },
        {
            "type": "color",
            "id": "bodytext_color",
            "label": "Body Text Color",
            "default": "#000000"
        },
        {
            "type": "select",
            "id": "left_right",
            "label": "Text Container on Left or Right (Desktop)",
            "default": "left",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text Alignment (Desktop)",
            "default": "left",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "end",
                    "label": "End"
                }
            ]
        },
        {
            "type": "select",
            "id": "text_align--mobile",
            "label": "Text Alignment (Tablet & Mobile)",
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "end",
                    "label": "End"
                }
            ]
        }
    ],
    "presets": [
    {
      "name": "About Section (Custom)",
      "settings": {
      }
    }
  ]
}
{% endschema %}