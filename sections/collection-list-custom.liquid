{% schema %}
{
    "name": "Collection List (Custom)",
    "tag": "section",
    "class": "collection_custom_list",
    "settings": [
        {
            "type": "checkbox",
            "id": "grid",
            "label": "Grid"
        }
    ],
    "blocks": [
      {
            "type": "collections",
            "name": "t:sections.collection-list-custom.blocks.collection_title.name",
            "limit": 3,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Collection Image"
                },
                {
                    "type": "text",
                    "id": "collection_title",
                    "label": "Collection Label"
                },
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link Text"
                },
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                }
            ]
        }
    ],
    "presets": [
      {
          "name": "Collections List (Custom)",
          "blocks": [
          {
            "type": "collections"
          }
        ]
      }
      ]
  }
{% endschema %}