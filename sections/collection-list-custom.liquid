
<div class="grid collection-container">
    {%-for block in section.blocks-%}
        <div class="collection-container__inner">
            <a style="display:block" href="{{block.settings.collection.url}}">
                {% if block.settings.image != blank %}
                    <img class="collection__image" src="{{ block.settings.image | collection_img_url: 'medium' }}">
                {% else %}
                    <img class="collection__image" src="{{ block.settings.collection.featured_image | collection_img_url: 'medium' }}">
                {% endif %}
                <div class="inner" onclick="location.href='{{block.settings.collection.url}}';">
                    <p class="inner__title">{{ block.settings.collection_title }}</p>
                    <div class="inner__link-container">
                        <p class="inner__link-text">{{ block.settings.link_text }}</p>
                        <span><img src="{{ 'icon-arrow-right.png' | asset_url }}"></span>
                    </div>
                </div>
            </a>
        </div>
    {%- endfor -%}
</div>

{% schema %}
{
    "name": "Collection List (Custom)",
    "tag": "section",
    "class": "collection_custom_list",
    "settings": [
        {
            "type": "checkbox",
            "id": "grid",
            "label": "Grid"
        }
    ],
    "blocks": [
      {
            "type": "collections",
            "name": "t:sections.collection-list-custom.blocks.collection_title.name",
            "limit": 3,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Collection Image"
                },
                {
                    "type": "text",
                    "id": "collection_title",
                    "label": "Collection Label"
                },
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link Text"
                },
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                }
            ]
        }
    ],
    "presets": [
      {
          "name": "Collections List (Custom)",
          "blocks": [
          {
            "type": "collections"
          }
        ]
      }
      ]
}
{% endschema %}