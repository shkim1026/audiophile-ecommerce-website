<div class="product__container">
    {% for collection in product.collections %}
    <div class="product__backContainer">
        <a class="product__backLink" href="{{collection.url}}">Go Back</a>
    </div>
    {% endfor %}
    {% for image in product.images %}
        {% if forloop.first == true %}
            <div class="product__primaryContainer displayGridCol-info">
                <div class="product__imgContainer">
                    <img class="product__img" src="{{ image | img_url: 'large' }}">
                </div>
                <div class="product__infoContainer">
                    {% if section.settings.subtext == true %}
                    <p class="product__subtext">New Product</p>
                    {% endif %}
                    <h1 class="product__title">{{ product.title }}</h1>
                    <p class="product__description">{{ product.description }}</p>
                    <p class="product__price">{{ product.price | money }}</p>
                    <div>
                        <input type="number" id="orderQuantity" name="quantity" min="1" max="99">
                        <button class="addToCartBtn">Add to Cart</button>
                    </div>
                </div>
            </div>
            <div class="product__secondaryContainer displayGridCol-metafield">
                <div>
                    <h3 class="product__metafieldLabel">Features</h3>
                    <p>{{ product.metafields.global.features }}</p>
                </div>
                <div class="product__metafieldContainer--inTheBox">
                    <h3 class="product__metafieldLabel">In the box</h3>
                    <div>{{ product.metafields.global.in-the-box }}</div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <div class="displayGrid-imageGrid">
        {% for image in product.images %}
            {% if forloop.index0 > 0 and forloop.index0 < 4 %}
                <img class="extraImg additionalImg-{{ forloop.index }}" src="{{ image | img_url: 'large'}}">
            {% endif %}
        {% endfor %}
    </div>
</div>

<style>
    .product__container {
        max-width: 1600px;
        margin: 7rem auto;
        padding: 0 5rem;
    }
    .product__backContainer {
        margin-bottom: 5rem;
        font-size: 1.25rem;
    }
    .product__img {
        width: 100%;
    }
    .product__subtext {
        text-transform: uppercase;
        letter-spacing: 1rem;
        font-size: 1.25rem;
    }
    .product__title {
        margin: 3rem 0;
        color: {{section.settings.color-title}};
        {% if section.settings.uppercase-title == true %}
        text-transform: uppercase;
        {% endif %}
        line-height: {{section.settings.fontsize-title}}rem;
        font-size: {{section.settings.fontsize-title}}rem;
    }
    .product__description {
        margin-bottom: 6rem;
        font-size: 1.25rem;
    }
    .product__price {
        margin-bottom: 5rem;
        font-weight: 600;
    }
    .product__secondaryContainer {
        margin: 15rem auto;
    }
    .product__metafieldLabel {
        {% if section.settings.uppercase-label == true %}
        text-transform: uppercase;
        {% endif %}
        color: {{section.settings.color-label}};
        font-size: {{section.settings.fontsize-label}}rem;
    }
    .product__metafieldContainer--inTheBox {
        justify-self: center;
    }
    .addToCartBtn {
        box-shadow: none;
        border: none;
        padding: 2rem 5rem;
        font-family: 'Manrope', sans-serif;
        text-transform: uppercase;
        color: white;
        background-color: orange;
    }
    #orderQuantity {
        padding: 2rem 6rem;
        border: none;
        background-color: rgb(233, 233, 233);
        margin-right: 2rem;
    }
    .product__imgUl {
        padding: 0;
    }
    .product__infoContainer {
        align-self: center;
    }
    .displayGridCol-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 15rem;
    }
    .displayGridCol-metafield {
        display: grid;
        grid-template-columns: 3fr 2fr;
    }
    .displayGrid-imageGrid {
        display: grid;
        grid-template-columns: 2fr 3fr;
        grid-template-rows: 50% 50%;
        align-items: center;
        max-width: 1600px;
        margin: 0 auto;
        grid-gap: 0rem 7rem;
    }
    .extraImg {
        width: 100%;
        border-radius: 1rem;
    }
    .additionalImg-2 {
        align-self: baseline;
    }
    .additionalImg-3 {
        grid-column-start: 1;
        align-self: end;
    }
    .additionalImg-4 {
        grid-row-start: 1;
        grid-column-start: 2;
        grid-row-end: 3;
        width: 100%;
    }
</style>


{% schema %}
{
    "name": "Product (Custom)",
    "tag": "section",
    "class": "product",
    "settings": [
        {
            "type": "checkbox",
            "id": "subtext",
            "label": "New Product",
            "default": true
        },
        {
            "type": "color",
            "id": "color-title",
            "label": "Product Title Color",
            "default": "#000000"
        },
        {
            "type": "checkbox",
            "id": "uppercase-title",
            "label": "Uppercase Product Title",
            "default": false
        },
        {
            "type": "range",
            "id": "fontsize-title",
            "label": "Product Title Size (REM)",
            "default": 6,
            "min": 1,
            "max": 12
        },
        {
            "type": "color",
            "id": "color-desc",
            "label": "Product Description Color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "color-label",
            "label": "Features/In the Box Color",
            "default": "#000000"
        },
        {
            "type": "checkbox",
            "id": "uppercase-label",
            "label": "Features/In the Box Uppercase",
            "default": true
        },
        {
            "type": "range",
            "id": "fontsize-label",
            "label": "Features/In the Box Size (REM)",
            "default": 3,
            "min": 1,
            "max": 10
        },
        {
            "type": "select",
            "id": "text-align",
            "label": "Align Text",
            "default": "baseline",
            "options": [
                {
                    "value": "baseline",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "end",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "select",
            "id": "text-align--mobile",
            "label": "Align Text (Tablet/Mobile)",
            "default": "baseline",
            "options": [
                {
                    "value": "baseline",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "end",
                    "label": "Right"
                }
            ]
        }
    ]
}
{% endschema %}