{% if section.settings.enable == true %}
<div class="modal">
    <div class="modal-content">
        <span class="close-modal">&times</span>
        <p class="sign-up">Sign up</p>
        <h2 class="modal__header">Recieve updates & exclusive discounts!</h2>
        <form class="modal__form">
            <input class="form__input" type="email" id="email" name="email" value="Email*"><br>
            <button class="form__submit" type="submit">Subscribe</button>
        </form>
        <p class="form__agreement">I give Audiophile permission to contact me & agree to the <span><a href="#">terms</a></span>.</p>
    </div>
</div>
{% endif %}

<style>
    .modal {
        display:none;
        position: fixed;
        z-index: 5;
        width: 100%;
        height: 100vh;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4) !important;
        overflow-y: hidden;
    }
    .modal-content {
        display: block;
        position: relative;
        max-width: 374px;
        margin: 0 auto;
        top: 30vh;
        left: auto;
        right: auto;
        bottom: auto;
        padding: 2rem 6rem;
        padding-bottom: 4rem;
        background-color: white;
    }
    .close-modal {
        position: absolute;
        right: 0;
        top: 0;
        line-height: 4rem;
        padding-right: 1rem;
        font-size: 5rem;
        cursor: pointer;
    }
    .close-modal:hover,
    .close-modal:focus {
        color: {{section.settings.btn-hvr-background-color}};
    }
    .modal__header {
        font-weight: 600;
        margin-top: 1rem;
    }
    .sign-up {
        text-transform: uppercase;
        text-align: center;
        font-weight: 600;
        margin-bottom: 0rem;
    }
    .form__input {
        width: 100%;
        padding-bottom: 1rem;
        border: none;
        border-bottom: 1px solid gray;
        color: gray;
    }
    .form__submit {
        width: 100%;
        padding: 1rem;
        text-transform: uppercase;
        margin-top: 3rem;
        border: none;
        letter-spacing: 0.25rem;
        cursor: pointer;
        background-color: {{section.settings.btn-background-color}};
        color: {{section.settings.btn-text-color}};
    }
    .form__submit:hover {
        background-color: {{section.settings.btn-hvr-background-color}};
    }
    .form__agreement {
        font-size: 1rem;
        text-align: center;
    }
</style>

{% schema %}
{
    "name": "Modal (Custom)",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable",
            "default": true,
            "label": "Enable Modal"
        },
        {
            "type": "text",
            "id": "modal-heading",
            "default": "Recieve updates & exclusive discounts!",
            "label": "Modal Heading Text"
        },
        {
            "type": "color",
            "id": "btn-background-color",
            "label": "Button Background Color",
            "default": "#D87D4A"
        },
        {
            "type": "color",
            "id": "btn-hvr-background-color",
            "label": "Button Background Color on Hover",
            "default": "#FBAF85"
        },
        {
            "type": "color",
            "id": "btn-text-color",
            "label": "Button Text Color",
            "default": "#FFFFFF"
        }
    ]
}
{% endschema %}