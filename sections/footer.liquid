<div class="footer">
  <div class="footer__inner">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'image' %}
          {% if block.settings.logo != blank %}
            <img class="footer-logo" src="{{block.settings.logo | img_url: '200x'}}">
          {% endif %}
        <div class="footer__link-outer-container">
          {% when 'link_list' %}
            <div class="footer__link-container">
              {% if block.settings.link-heading != blank %}
                <h5 class="footer__links-heading"> {{ block.settings.link-heading }} </h5>
              {% endif %}
              <ul class="footer__link-list">
                {% for link in block.settings.menu.links %}
                  <li><a href="{{ link.url }}" class="footer__link-item">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
      {% endcase %}
    {% endfor %}
        </div>
    <div class="copyright-container">
      <sub class="footer-copyright">Copyright 2021. All Rights Reserved</sub>
    </div>
    <ul class="social-list">
      <li>
        <a href="#" class="social-link">
          {% render 'icon-facebook' %}
          <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
        </a>
      </li>
      <li>
        <a href="#" class="social-link">
          {% render 'icon-twitter' %}
          <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
        </a>
      </li>
      <li>
        <a href="#" class="social-link">
          {% render 'icon-instagram' %}
          <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
        </a>
      </li>
    </ul>
    
  </div>
</div>

<style>
  .footer {
    background-color: black;
  }
  .footer__inner {
    position: relative;
    max-width: 1600px;
    margin: 0 auto;
    padding: 3rem 5rem;
  }
  .footer__link-outer-container {
    display: flex;
  }
  .footer-logo {
    align-self: center;
  }
  .footer p {
    color: white;
  }
  .footer__link-list {
    padding: 0;
    width: 75%;
    justify-self: right;
    min-width: 300px;
    text-transform: {{section.settings.link-item-text-transform}};
  }
  .footer__links-heading {
    color: {{section.settings.link-heading-color}};
    text-transform: {{section.settings.link-heading-text-transform}};
  }
  .footer__link-item {
    {% if section.settings.link-items-opacity == true %}
    opacity: 0.5;
    {% endif %}
  }
  .footer__link-item,
  .social-link svg,
  .footer-copyright {
    color: {{section.settings.link-items-text-color}};
  }
  .footer__link-item:hover,
  .social-link svg:hover {
    color: {{section.settings.items-hover-color}};
    opacity: 1;
  }
  .social-list {
    padding: 0;
    width: 10%;
    position: absolute;
    right: 5rem;
    bottom: 10rem;
    display: flex;
    place-content: space-around;
  } 
  .social-link svg {
    width: 100%;
    height: 2rem;
  }
  .about-subtext {
    opacity: 0.5;
    margin-bottom: 5rem;
    margin-right: 52rem;
  }
  .footer-copyright {
    opacity: 0.5;
  }

  @media only screen and (max-width: 991px) {
    .column-grid-2 {
      display: block;
      margin-left: 0;
      text-align: center;
    }
    .about-subtext {
      margin-top: 2rem;
      margin-right: 0;
    }
    .social-list {
      bottom: 1rem;
    }
  }

  @media only screen and (max-width: 767px) {
    .footer__link-outer-container {
      display: block;
    }
    .footer__inner {
      padding: 5rem 5rem;
    }
    .footer__link-list {
      display: block;
      margin-left: 0;
      width: 100%;
      margin: 4rem auto;
      min-width: auto;
    }
    .footer__link-list li {
      margin: 1rem 0;
    }
    .column-grid-2,
    .about-subtext {
      text-align: center;
    }
    .copyright-container {
      text-align: center;
    }
    .social-list {
      margin: 0 auto;
      margin-top: 5rem;
      position: initial;
      width: 50%;
    }
  }
</style>

{% schema %}
{
  "name": "Footer (Custom)",
  "blocks": [
    {
      "type": "link_list",
      "name": "Footer Links",
      "settings": [
        {
          "type": "text",
          "id": "link-heading",
          "label": "Footer Links Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Select Links for Footer"
        }
      ]
    },
    {
      "type": "image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Choose Logo Image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color",
      "id": "link-heading-color",
      "label": "Color for Links Heading",
      "default": "#FFFFFF"
    },
    {
      "type": "select",
      "id": "link-heading-text-transform",
      "label": "Select Heading Text Style",
      "options": [
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        }
      ],
      "default": "uppercase"
    },
    {
      "type": "color",
      "id": "link-items-text-color",
      "label": "Color for Links & Social Media Icons",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "items-hover-color",
      "label": "Hover Color for Lnks & SM Icons",
      "default": "#D87D4A"
    },
    {
      "type": "select",
      "id": "link-item-text-transform",
      "label": "Select Link Text Style",
      "options": [
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        }
      ],
      "default": "capitalize"
    },
    {
      "type": "checkbox",
      "id": "link-items-opacity",
      "label": "Enable Link Opacity",
      "default": true
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "link_list"
      }
    ]
  }
}
{% endschema %}
